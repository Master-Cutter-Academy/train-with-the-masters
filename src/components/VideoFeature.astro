---
const { videoFeatureHeading, youtubeVideoTitle, youtubeVideoID } = Astro.props;
---

<section class="video-feature-area">
  <div class="video-feature-area__content">
    <h3>
      {videoFeatureHeading}
    </h3>
    <iframe
      loading="lazy"
      class="video-feature-area__content__iframe"
      data-video-id={youtubeVideoID}
      data-autoplay="0"
      data-loop="0"
      allowfullscreen="1"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      title={youtubeVideoTitle}
      src={`https://www.youtube.com/embed/${youtubeVideoID}`}
      frameborder="0"></iframe>
  </div>
</section>

<style>
  .video-feature-area {
    @apply card card-normal basis-1/3 flex-col justify-center bg-neutral-content;
  }
  .video-feature-area__content {
    @apply card-body text-center;
  }
  .video-feature-area__content h3 {
    @apply card-title mb-4 text-2xl font-extrabold;
  }
  .video-feature-area__content iframe {
    @apply aspect-video h-full w-full;
  }
</style>
