---
const {
  callOut,
  date,
  time,
  location,
  address,
  cityStateZip,
  locationName,
  locationImage,
  locationImageAlt,
} = Astro.props.eventInfo;
---

<!-- Event Info -->
<section class="event-info">
  <div class="wrapper">
    <h3>{callOut}</h3>
    <span class="event-info__date">
      {date}
      <br />
      {time}
      <br />
    </span>
    <hr />
    <span class="event-info__location">
      <span class="event-info__location__name">{location}</span>
      <br />
      {locationName}
      <br />
      {address}
      <br />
      {cityStateZip}
    </span>
  </div>
  <img src={locationImage} alt={locationImageAlt} />
</section>

<style>
  .event-info {
    @apply card card-normal min-h-fit basis-1/3 flex-wrap justify-center border bg-accent pt-4 text-center text-secondary;
  }
  .wrapper {
    @apply px-4;
  }
  .event-info h3 {
    @apply my-2 text-base font-semibold text-secondary lg:text-xl lg:leading-loose;
  }
  .event-info__date {
    @apply text-lg font-bold  lg:text-2xl;
  }
  .event-info hr {
    @apply my-3;
  }
  .event-info__location {
    @apply prose-lg font-semibold   lg:prose-2xl;
  }
  .event-info__location__name {
    @apply text-xl font-extrabold  lg:text-3xl;
  }
  .event-info img {
    @apply mt-4;
  }
</style>
