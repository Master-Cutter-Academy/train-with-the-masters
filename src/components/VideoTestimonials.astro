---
const { headertitle, videos } = Astro.props.testimonials;
---

<div class="testimonials">
  <h2>{headertitle}</h2>
  <div class="videos">
    {
      videos.map((video) => (
        <div class="video">
          <iframe
            src={video}
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen
            data-ready="true"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  .testimonials {
    @apply container mx-auto max-w-5xl bg-primary py-8 text-primary-content;
  }

  h2 {
    @apply mb-8 text-center text-4xl font-bold;
  }

  .videos {
    @apply grid grid-cols-1 justify-center justify-items-center gap-4 md:grid-cols-2 lg:grid-cols-3;
  }

  .videos div:last-of-type {
    @apply col-start-1 col-end-1 md:col-end-3 lg:col-end-1 lg:row-start-1 lg:row-end-1;
  }

  .video {
    @apply border;
  }
</style>
